        "elif kekurangan > 2*satu_papan_karton:\n",
        "  biaya_karton = 8000*kebutuhan_karton + (16000)\n",
        "elif kekurangan > 3*satu_papan_karton:\n",
        "  biaya_karton = 8000*kebutuhan_karton + (24000)\n",
        "else:\n",
        "  biaya_karton = 8000*kebutuhan_karton + (28000)\n",
