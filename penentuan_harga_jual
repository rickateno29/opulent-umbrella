      "cell_type": "code",
      "source": [
        "satu_papan_karton = (109//lebar)*(79//panjang)\n",
        "kebutuhan_karton = jumlah_pesanan//(satu_papan_karton)\n",
        "kekurangan = jumlah_pesanan - (kebutuhan_karton * (satu_papan_karton))\n",
        "print('satu papan karton =', satu_papan_karton)\n",
        "print('kebutuhan karton =', kebutuhan_karton)\n",
        "print('kekurangan =', kekurangan)"
